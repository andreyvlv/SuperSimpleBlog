@model SuperSimpleBlog.Models.Post
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="admin" asp-route-id="@Model.ID">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Заголовок</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="Created" value="@Model.Created"/>
        <label asp-for="Excerpt" class="control-label">Превью</label>
        <textarea id="editor1" asp-for="Excerpt" rows="10" class="form-control"></textarea>
        <script>
            CKEDITOR.replace('editor1');
        </script>
        <label asp-for="Content" class="control-label">Текст поста</label>
        <textarea id="editor2" asp-for="Content" rows="20" class="form-control"></textarea>
        <script>
            CKEDITOR.replace('editor2');
        </script>
    </div>
    <div class="form-group">
        <input type="submit" value="Обновить" class="btn btn-primary" />
    </div>
</form>